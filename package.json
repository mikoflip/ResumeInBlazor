{
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.8",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.8"
  },
  "scripts": {
    "format:css": "npx prettier --write Shared/MainStyles.css --plugin=prettier-plugin-tailwindcss",
    "build:css": "npx tailwindcss -i Shared/MainStyles.css -o wwwroot/css/styles.css --minify",
    "watch:css": "npx tailwindcss -i Shared/MainStyles.css -o wwwroot/css/styles.css --watch"
  }
}
